{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "node_modules/ng-autosize/**/*.ts",
    "node_modules/ng2-datetime/ng2-datetime.ts",
    "**/*.ts"
  ]
}
